                        android:textSize="14dp"
                        android:textColor="@color/initial_font_gotham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:text="Tuesday March 21st, 2017 | Blog, Product"
                        android:layout_margin="3dp"
                        android:textSize="8dp"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textStyle="italic"
                        android:text="by VMAX"
                        android:layout_margin="3dp"
                        android:textSize="16px"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </RelativeLayout>

<View
